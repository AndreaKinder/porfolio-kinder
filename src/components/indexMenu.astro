---
import "../styles/styles.css"

interface Props {
    title: string;
    menu: {
        title: string,
        img: {
            src: string;
            alt: string;
        };
        href: string;
    }[];
};

const { title, menu } = Astro.props;
---
<div class="container-fluid vh-100 min-vh-100">
    <div class="p-5"><h2 class="fw-bold fs-1">{title}</h2></div>
<div class="card-group">
    <div class="card">
      <img src=`${menu[0].img.src}` class="card-img-top" alt=`${menu[0].img.alt}`>
      <div class="card-body">
        <h5 class="card-title">{menu[0].title}</h5>
      </div>
    </div>
    <div class="card">
      <img src=`${menu[1].img.src}` class="card-img-top" alt=`${menu[1].img.alt}`>
      <div class="card-body">
        <h5 class="card-title">{menu[1].title}</h5>
      </div>
    </div>
    <div class="card">
      <img src=`${menu[2].img.src}` class="card-img-top" alt=`${menu[2].img.src}`>
      <div class="card-body">
        <h5 class="card-title">{menu[2].title}</h5>
      </div>
    </div>
  </div>
</div>