---
import "../styles/styles.css";
import ProjectCard from "./project-card.astro";

const projects = [
    {
        title: "Construhack 2025",
        href: "https://github.com/AndreaKinder/construhack2025",
        description:
            "Proyecto para ConstruHack 2025.Muestra con react native de app para solución integral de gestión inteligente para viviendas y comunidades sostenibles.",
        tag: "react react-native git html javascript android",
    },
    {
        title: "Construhack 2024",
        href: "https://github.com/AndreaKinder/construhack2024",
        description:
            "Proyecto prueba piloto del proyecto Construhack 2024, una aplicacion de inteligencia artificial para la clasificacion automatica de sobrantes de obras civiles, con el objetivo de promover un sistema de economia circular.",
        tag: "react react-native git html javascript android",
    },
    {
        title: "Portfolio",
        href: "https://github.com/AndreaKinder/porfolio-kinder",
        description: "Mi portfolio personal, creado con Astro.",
        tag: "astro git bootstrap html javascript",
    },
    {
        title: "Wowfinder",
        href: "https://github.com/edurne85/wowfinder",
        description:
            "Paquete de utilidades para la campaña 'Wowfinder' (campaña de rol basada en el sistema Pathfinder 1ed y ambientada en el universo Warcraft de Blizzard).",
        tag: "react git html javascript",
    },
    {
        title: "SecureWallet",
        description:
            "Proyecto presentado en el Hackathon Open Gateway 2025, obteniendo el 4to lugar en la competencia.",
        href: "https://github.com/AndreaKinder/secureWallet/tree/main",
        tag: "react react-native git api javascript android",
    },
    {
        title: "Kinder.Vim",
        description:
            "Configuración personalizada de Neovim.",
        href: "https://github.com/AndreaKinder/Kinder.Vim",
        tag: "linux bash git nvim",
    },
    {
        title: "Copilot CLI Neovim",
        description:
            "Plugin de Neovim que integra GitHub Copilot CLI para generar y ejecutar comandos de terminal desde el editor.",
        href: "https://github.com/AndreaKinder/copilot-cli.nvim",
        tag: "linux bash git nvim",
    },
    {
        title: "Kinder.Dots",
        description:
            "Esta es mi colección personal de dotfiles, diseñados para crear un entorno de desarrollo y escritorio cohesivo y productivo.",
        href: "https://github.com/AndreaKinder/Kinder.Dots",
        tag: "linux bash git",
    },
    {
        title: "Kinder.Shell",
        description:
            "Configuraciones modernas y unificadas de shell para Fish, Bash y Zsh, diseñadas para desarrollo profesional.",
        href: "https://github.com/AndreaKinder/Kinder.Shell",
        tag: "linux bash git",
    },
    {
        title: "RomsManager",
        description:
            "Gestor de ROMs para organizar y administrar colecciones de juegos retro.",
        href: "https://github.com/AndreaKinder/RomsManager",
        tag: "linux bash git",
    },
];
---

<style>
    .projects-container {
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
    }
    /* Sección de Habilidades */
    .skills-section {
        padding: 4rem 1rem;
        text-align: center;
    }

    .skills-section h2 {
        font-size: 2.5rem;
        margin-bottom: 2rem;
        font-weight: bold;
        text-shadow: var(--shadow);
    }

    .skills-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
    }

    .skill-chip {
        background: var(--backgrown-2nd);
        height: 50px;
        padding: 0.75rem 1.5rem;
        border-radius: 20px;
        font-size: 1rem;
        font-weight: bold;
        box-shadow:
            var(--shadow),
            -3px -3px 6px rgba(255, 255, 255, 0.8);
        transition:
            transform 0.3s,
            box-shadow 0.3s;
        border: var(--text) 1px solid;
    }

    .skill-chip:hover {
        transform: translateY(-5px);
        box-shadow:
            var(--shadow),
            -3px -3px 12px rgba(255, 255, 255, 0.9);
    }
    h2,
    a {
        color: var(--text);
    }
    a {
        text-decoration: none;
    }
    .active {
        background: var(--button-gradient);
    }
    .non {
        display: none;
    }
</style>

<section class="continer" id="projects">
    <h2 class="m-4">Mis Proyectos</h2>
    <div class="row">
        <div class="col p-4">
            <div class="row row-cols-1 row-cols-md-3 g-4 skills-container">
                <div id="linux" class="skill-chip active-chip">Linux</div>
                <div id="bash" class="skill-chip">Bash</div>
                <div id="react" class="skill-chip">React</div>
                <div id="react-native" class="skill-chip">React Native</div>
                <div id="git" class="skill-chip">Git</div>
                <div id="html" class="skill-chip">HTML & CSS</div>
                <div id="api" class="skill-chip">APIs REST</div>
                <div id="javascript" class="skill-chip">JavaScript</div>
                <div id="astro" class="skill-chip">Astro</div>
                <div id="bootstrap" class="skill-chip">Bootstrap</div>
                <div id="android" class="skill-chip">Android</div>
                <div id="nvim" class="skill-chip">Neovim</div>
            </div>
        </div>

        <div class="col non projects-container p-4 align-items-center">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {
                    projects.map((project) => {
                        return (
                            <ProjectCard
                                title={project.title}
                                href={project.href}
                                description={project.description}
                                tag={project.tag}
                            />
                        );
                    })
                }
            </div>
        </div>
    </div>
    <script src="../js/tagProjectSelector.js"></script>
</section>
