---
import "../styles/styles.css"
---
<!--Contacto-->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
<script type="text/javascript">
    (function() {
        // https://dashboard.emailjs.com/admin/account
        emailjs.init({
        publicKey: "hSD1VQPNhVyqiQAxx",
        });
    })();
</script>
<script type="text/javascript">
    window.onload = function() {
        document.getElementById('contact-form').addEventListener('submit', function(event) {
            event.preventDefault();
            emailjs.sendForm('service_84t9w75', 'template_nfgerqa', this)
                .then(() => {
                    console.log('SUCCESS!');
                    document.getElementById("contact-form").reset()
                }, (error) => {
                    console.log('FAILED...', error);
                });
        });
    }
</script>
<div id="contact" class="container-fluid">
    <div class="col p-5 mt-4">
        <div class="p-2">
            <h2 class="fw-bold fs-1" >Contacto</h2>
        </div>
        <form id="contact-form" class="border" style="background: var(--button-gradient);">
            <input type="hidden" name="contact_number">
            <div class="mb-4">
                <label class="form-label">Nombre</label>
                <input type="text" class="form-control material-input" name="user_name" placeholder="Tu nombre">
            </div>
            <div class="mb-4">
                <label class="form-label">Correo Electr√≥nico</label>
                <input class="form-control material-input" type="email" name="user_email" placeholder="Tu email">
            </div>
            <div class="mb-4">
                <label class="form-label">Mensaje</label>
                <textarea class="form-control material-input" name="message" rows="4" placeholder="Tu mensaje"></textarea>
            </div>
            <div>
                <button class="border" id="submit" type="submit" style="background: var(--button-gradient);
                color: var(--text); border-radius: 50px; padding: 8px 16px; border: none; box-shadow: var(--shadow); transition: transform 0.2s;">
                Enviar
                </button>

                <script>
                    document.getElementById('submit').addEventListener('click', function() {
                        this.style.transform = 'scale(0.95)';
                        setTimeout(() => {
                            this.style.transform = 'scale(1)';
                        }, 150);
                    });

                    document.getElementById('submit').addEventListener('mouseover', function() {
                        this.style.transform = 'scale(1.05)';
                    });

                    document.getElementById('submit').addEventListener('mouseout', function() {
                        this.style.transform = 'scale(1)';
                    });
                </script>
            </div>
        </form>
    </div>
</div>

<style>
/* General Styles */

#contact-form {
    max-width: 1340px;
    margin: 20px auto;
    padding: 20px;
    border-radius: 20px;
    box-shadow: var(--shadow);
}

/* Form Label */
.form-label {
    font-weight: bold;
    font-size: 1rem;
    color: var(--text);
    margin-bottom: 8px;
    display: block;
}

/* Input Fields */
.material-input {
    width: 100%;
    padding: 12px 16px;
    font-size: 1rem;
    border: 1px solid #ddd;
    border-radius: 20px;
    background-color: #f9f9f9;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.material-input:focus {
    border-color: #6200ee;
    box-shadow: var(--shadow);
    outline: none;
    background-color: #fff;
}

/* Button Styles */
.material-button {
    background-color: #6200ee;
    color: #fff;
    border: none;
    padding: 12px 20px;
    font-size: 1rem;
    font-weight: bold;
    border-radius: 20px;
    cursor: pointer;
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
}

.material-button:hover {
    background-color: #3700b3;
    box-shadow: var(--shadow);
}

/* Responsive Design */
@media (max-width: 576px) {
    #contact-form {
        max-width: 90%;
        padding: 15px;
    }
}
</style>

