---
interface Props {
        title: string;
        href: string;
        description: string;
};
const { title, href, description } = Astro.props;
---
<div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">{title}</h5>
      <p class="card-text">{description}</p>
      <a href={href} class="btn btn-light">Ver proyecto</a>
    </div>
  </div>