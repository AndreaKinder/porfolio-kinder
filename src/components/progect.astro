---
import '../styles/styles.css';

interface Props {
        title: string;
        image: string;
        href: string;
        description: string;
};
const { title, image, href, description } = Astro.props;
---

  <style>

    .project-card {
      background: var(--button-gradient);
      border-radius: 20px;
      box-shadow: var(--shadow), -3px -3px 6px rgba(255, 255, 255, 0.8);
      overflow: hidden;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .project-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow), -3px -3px 12px rgba(255, 255, 255, 0.9);
    }

    .project-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .project-details {
      padding: 1rem;
      text-align: left;
    }

    .project-details h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .project-details p {
      font-size: 1rem;
      color: var(--text); /* Negro */
    }
  </style>
      <div class="project-card">
        <img src={image} alt="Proyecto 1" class="project-image">
        <div class="project-details">
          <h3>{title}</h3>
          <p>{description}</p>
                <div style="text-align: center; margin-top: auto;">
                <button style="
                  background: var(--button-gradient);
                  color: var(--text); border-radius: 50px; padding: 8px 16px; border: none; box-shadow: var(--shadow); transition: transform 0.2s;">
                  <a class="nav-link" href={href} id="galery-progects-link" style="text-decoration: none; color: inherit;">
                  Ir al Proyecto
                  </a>
                </button>
                </div>
              </div>
          </div>
      </div>
      
    <style>
      button:active {
        transform: scale(0.95);
      }
    </style>