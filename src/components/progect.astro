---
interface Props {
        title: string;
        href: string;
        src: string;
        alt: string;
        description: string;
};
const { title, href, src, alt, description } = Astro.props;
---
<div class="card-body">
    <img src={src} class="card-img-top" alt={alt}>
      <div class="col-sm-6 mb-3 mb-sm-0 mt-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{title}</h5>
            <p class="card-text">{description}</p>
            <a href={href} class="btn btn-light" >Ir al Proyecto</a>
        </div>
      </div>
    </div>