---
import Footer from "../components/footer.astro";
import "../styles/styles.css";
import HerderLink from "../components/herderLink.astro";
import HeaderMenu from "../components/headerMenu.astro";
const posts = await Astro.glob("./blog/*.md");
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Andrea Villar</title>

        <!-- Press Start 2P Font (NES.css official font) -->
        <link
            href="https://fonts.googleapis.com/css?family=Press+Start+2P&display=swap"
            rel="stylesheet"
        />

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
    </head>

    <body>
        <HeaderMenu />
        <style>
            body {
                margin: 0;
                padding: 0;
                font-family: "Press Start 2P", cursive;
                image-rendering: pixelated;
                image-rendering: -moz-crisp-edges;
                image-rendering: crisp-edges;
            }
            h1 {
                font-size: 2rem;
                font-family: "Press Start 2P", cursive;
                line-height: 1.6;
                text-shadow: 4px 4px 0px rgba(0, 0, 0, 0.2);
            }
            .card {
                border: 4px solid var(--text) !important;
                border-radius: 0 !important;
                box-shadow: var(--shadow) !important;
                background: var(--button-gradient) !important;
                transition: transform 0.1s steps(2);
                image-rendering: pixelated;
            }
            .card:hover {
                transform: translate(4px, 4px);
                box-shadow: 2px 2px 0px var(--text) !important;
            }
            .card-title {
                color: var(--text);
                font-family: "Press Start 2P", cursive;
                font-size: 1rem;
                line-height: 1.6;
                margin-bottom: 1rem;
            }
            .card-text {
                font-family: "Press Start 2P", cursive;
                font-size: 0.75rem;
                line-height: 1.8;
                margin-bottom: 1.5rem;
            }
            .btn {
                background: var(--button-gradient);
                border-radius: 0 !important;
                box-shadow: var(--shadow);
                border: 4px solid var(--text) !important;
                color: var(--text);
                font-family: "Press Start 2P", cursive;
                font-size: 0.75rem;
                padding: 0.75rem 1.5rem;
                transition:
                    transform 0.1s steps(2),
                    background-color 0.1s;
                text-decoration: none;
                display: inline-block;
            }
            .btn:hover {
                transform: translate(2px, 2px);
                box-shadow: 2px 2px 0px var(--text) !important;
                background-color: #e76e55 !important;
                color: var(--text) !important;
            }

            /* Responsive adjustments */
            @media (max-width: 768px) {
                h1 {
                    font-size: 1.5rem;
                }
                .card-title {
                    font-size: 0.85rem;
                }
                .card-text {
                    font-size: 0.7rem;
                }
                .btn {
                    font-size: 0.7rem;
                    padding: 0.6rem 1.2rem;
                    width: 100%;
                }
            }

            @media (max-width: 576px) {
                h1 {
                    font-size: 1.2rem;
                    padding: 2rem 1rem !important;
                    margin: 1rem !important;
                }
                .card-body {
                    padding: 1rem !important;
                }
                .card-title {
                    font-size: 0.75rem;
                    margin-bottom: 0.75rem !important;
                }
                .card-text {
                    font-size: 0.65rem;
                    line-height: 1.6;
                }
                .btn {
                    font-size: 0.65rem;
                    padding: 0.5rem 1rem;
                }
            }
        </style>
        <div class="container-fluid pt-5 mt-5">
            <h1 class="nes-text text-center mb-5">Blog</h1>
        </div>
        <div
            class="container px-3 px-md-5"
            style="min-height: calc(100vh - 25rem); max-width: 900px;"
        >
            <div class="list-container">
                {
                    posts.map((post) => (
                        <div class="list-item mb-4">
                            <div class="card">
                                <div class="card-body p-4">
                                    <div class="row align-items-center">
                                        <div class="col-12 col-md-8">
                                            <h5 class="card-title nes-text mb-3">
                                                {post.frontmatter.title}
                                            </h5>
                                            <p class="card-text nes-text mb-3 mb-md-0">
                                                {post.frontmatter.description}
                                            </p>
                                        </div>
                                        <div class="col-12 col-md-4 text-md-end text-center mt-3 mt-md-0">
                                            <a
                                                href={post.url}
                                                class="btn nes-text"
                                            >
                                                Ir al Art√≠culo
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
        <div class="text-center my-5">
            <HerderLink href={"/"} class="btn">Home</HerderLink>
        </div>
    </body>
    <div class="container-fluid">
        <Footer />
    </div>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</html>
