---
import Footer from "../components/footer.astro";
import "../styles/styles.css";
import HerderLink from "../components/herderLink.astro";
import HeaderMenu from "../components/headerMenu.astro";
const posts = await Astro.glob('./blog/*.md');
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Andrea Villar</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>

    <body>
        <HeaderMenu />
        <style>
            body {
                font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
                margin: 0;
                padding: 0;
            }
            h1 {
                font-size: 2.5rem;
            }
            .card {
                border: none;
                border-radius: 12px;
                box-shadow: var(--shadow);
                background: var(--backgrown-2nd);
                transition: transform 0.3s ease, box-shadow 0.3s ease;
                border: var(--text) solid 1px;
            }
            .card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow);
            }
            .card-title {
                font-weight: 700;
                color: var(--text);
            }
            .btn {
                background: var(--backgrown-2nd);
                font-weight: 500;
                border-radius: 50px;
                box-shadow: var(--shadow);
                border: 1px solid var(--text);
                color: var(--text);
            }
            .btn:hover {
                box-shadow: var(--shadow);
                transform: translateY(-5px);
            }

        </style>
        <div class="container-fluid pt-5">
            <h1 class="fw-bold p-5 fs-1 m-3 text-center">Blog</h1>
        </div>
        <div class="container-fluid d-flex justify-content-center align-items-start" style="min-height: calc(100vh - 20rem);">
            <div class="row">
              {posts.map(post =>   
                <div class="col-md-4 mb-4">
                    <div class="card">
                      <div class="card-body" id={post.frontmatter.tag}>
                        <h5 class="card-title">{post.frontmatter.title}</h5>
                        <p class="card-text">{post.frontmatter.description}</p>
                        <a href={post.url} class="btn">Ir al Art√≠culo</a>
                      </div>
                    </div>
                  </div>
              )}
            </div>
        </div>
        <HerderLink href={"/"} class="btn">Home</HerderLink>
    </div>
    <div class="container-fluid">
        <Footer />
    </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>