---
import Progect from "../components/progect.astro";
import Footer from "../components/footer.astro";
import "../styles/styles.css";
import HerderLink from "../components/herderLink.astro";
import HeaderMenu from "../components/headerMenu.astro";
const progects = [{
        title: "AI Tols",
        image: "/img/ai-tools-progect.jpg",
        href: "https://hug-ai-tools.andreavillar.tech/",
        description: "Conjunto de herramientas de escritorio desarrolladas con Python de IA Generativa."
    },
    {
        title: "Construhack 2024",
        image: "/img/construhack.png",
        href: "https://github.com/AndreaKinder/construhack2024",
        description: "Prueba piloto del proyecto Construhack 2024, una aplicacion de inteligencia artificial para la clasificacion automatica de sobrantes de obras civiles, con el objetivo de promover un sistema de economia circular."
    },
    {
      title: "Kinder.Dots",
      image: "/img/Kinder-Dots.png",
      href: "https://github.com/AndreaKinder/Kinder.Dots",
      description: "Configuración customizada de Arch Linux."
    },
]
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Andrea Villar</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	</head>
	<body>
        <HeaderMenu />
        <style>
            /* Reset Básico */
            body, html {
              margin: 0;
              padding: 0;
              box-sizing: border-box;
              background: var(--button-gradient);
            }
        
            /* Sección de Proyectos */
            .projects-section {
              padding: 4rem 1rem;
              text-align: center;
            }
        
            .projects-section h2 {
              font-size: 2.5rem;
              margin-bottom: 2rem;
              font-weight: bold;
              text-shadow: var(--shadow);
            }
        
            .projects-container {
              display: grid;
              grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
              gap: 2rem;
              padding: 0 2rem;
            }
        </style>
  <div class="projects-section" id="projects">
    <h2 class="m-5">Proyectos</h2>
    <div class="projects-container">
        {
            progects.map(progect => {
                return <Progect {...progect} />
            })
        }
            </div>
    </div>
    <div class="container-fluid">
        <button style="
        background: var(--button-gradient);
        color: var(--text); border-radius: 50px; padding: 8px 16px; border: none; box-shadow: var(--shadow); transition: transform 0.2s;">
        <HerderLink class="nav-link" href="/" id="galery-progects-link" style="text-decoration: none;">
            Home
        </HerderLink>
      </button>    
    </div>
    <div class="container-fluid">
        <Footer />
    </div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	</body>
</html>
