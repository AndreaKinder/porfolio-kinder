---
import Footer from "../components/footer.astro";
import "../styles/styles.css";
import HerderLink from "../components/herderLink.astro";
import HeaderMenu from "../components/headerMenu.astro";
const { title, frontmatter } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content="Astro" />
        <title>Andrea Villar</title>

        <!-- NES.css Framework (8-bit style) -->
        <link
            href="https://unpkg.com/nes.css@latest/css/nes.min.css"
            rel="stylesheet"
        />

        <!-- Press Start 2P Font (NES.css official font) -->
        <link
            href="https://fonts.googleapis.com/css?family=Press+Start+2P&display=swap"
            rel="stylesheet"
        />

        <!-- Roboto Font (for body text) -->
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
            rel="stylesheet"
        />

        <!-- Bootstrap (optional - can be removed if using only NES.css) -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
        <style>
            body {
                font-family: "Press Start 2P", cursive;
                background: var(--bg-primary);
                margin: 0;
                padding: 0;
                image-rendering: pixelated;
                image-rendering: -moz-crisp-edges;
                image-rendering: crisp-edges;
            }

            h1 {
                font-size: 2rem;
                font-family: "Press Start 2P", cursive;
                line-height: 1.6;
                color: var(--text);
                text-shadow: 4px 4px 0px rgba(0, 0, 0, 0.2);
                margin-bottom: 2rem;
            }

            h4 {
                font-family: "Press Start 2P", cursive;
                font-size: 0.9rem;
                line-height: 1.6;
                color: var(--text);
                margin-bottom: 1.5rem;
            }

            p {
                font-family: "Press Start 2P", cursive;
                font-size: 0.8rem;
                line-height: 1.8;
                color: var(--text);
                margin-bottom: 2rem;
            }

            main {
                font-family: "Press Start 2P", cursive;
                font-size: 0.75rem;
                line-height: 1.8;
                color: var(--text);
            }

            /* NES.css button override for blog layout */
            button {
                font-family: "Press Start 2P", cursive;
                font-size: 0.75rem;
                background: var(--button-gradient);
                border: 4px solid var(--text) !important;
                border-radius: 0 !important;
                box-shadow: var(--shadow);
                color: var(--text);
                padding: 0.75rem 1.5rem;
                transition:
                    transform 0.1s steps(2),
                    background-color 0.1s;
                image-rendering: pixelated;
            }

            button:hover {
                transform: translate(2px, 2px);
                box-shadow: 2px 2px 0px var(--text) !important;
                background-color: #e76e55 !important;
            }

            /* Responsive adjustments */
            @media (max-width: 768px) {
                h1 {
                    font-size: 1.5rem;
                    padding: 2rem 1rem !important;
                }
                h4 {
                    font-size: 0.8rem;
                }
                p {
                    font-size: 0.7rem;
                }
                main {
                    font-size: 0.7rem;
                    padding: 2rem 1rem !important;
                }
                button {
                    font-size: 0.7rem;
                    padding: 0.6rem 1.2rem;
                }
            }

            @media (max-width: 576px) {
                h1 {
                    font-size: 1.2rem;
                    padding: 1.5rem 0.5rem !important;
                    margin-bottom: 1rem !important;
                }
                h4 {
                    font-size: 0.7rem;
                    padding-bottom: 1rem !important;
                }
                p {
                    font-size: 0.65rem;
                    line-height: 1.6;
                }
                main {
                    font-size: 0.65rem;
                    padding: 1rem 0.5rem !important;
                }
                button {
                    font-size: 0.65rem;
                    padding: 0.5rem 1rem;
                }
            }
        </style>
    </head>
    <body>
        <HeaderMenu />
        <div class="container-fluid mt-5">
            <h1 class="fs-1 fw-bold p-5">{frontmatter.title}</h1>
            <h4 class="pb-4">
                <span class="fw-bold">Autor del art√≠culo: </span>
                {frontmatter.author}
            </h4>
            <p>{frontmatter.description}</p>
            <main class="text-start p-5">
                <slot />
            </main>
        </div>
        <div class="container-fluid text-center mb-5">
            <button>
                <HerderLink
                    href="/"
                    id="galery-progects-link"
                    style="text-decoration: none; color: var(--text);"
                >
                    Home
                </HerderLink>
            </button>
        </div>
        <Footer />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    </body>
</html>
